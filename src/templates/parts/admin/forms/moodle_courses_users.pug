extends ../../../layout/form
include ../../../mixins/button-add-to-class
include ../../../mixins/button-remove-from-class

block variables
    - var id = 'moodle_courses_users_add'
    - var remove_id = 'moodle_courses_users_remove'

block icon
    include ../../../icons/presentation

block title
    | Course Enrollment

block form
    div.position-relative
        select.input-text.lms-course-selector.mb-1(name="moodle_courses" id="moodle_courses-input")
            option(value="") --- Choose Course
        select.input-text.mb-1.lms-user-selector(name="moodle_enrollees" id="moodle_enrollees-input")
            option(value="") --- Choose a User
        select.input-text.mb-1.d-none.lms-role-selector(name="moodle_role" id="moodle_role-input")
            option(value="4") Non-editing Teacher
            option(value="1") Manager
            option(value="5" selected=true) Student
            option(value="3") Teacher
        div.border-top.mt-1.pt-1
            p.fst-italic Current Members
            ul.mt-2(id="course-users-list")
        +button-add-to-class(id)
        +button-remove-from-class(remove_id)
