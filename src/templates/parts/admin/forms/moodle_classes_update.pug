extends ../../../layout/form
include ../../../mixins/button-save
include ../../../mixins/button-account-remove

block variables
    - var id = 'moodle_classes_update'

block icon
    include ../../../icons/admin

block title
    | Update a Class

block form
    div.position-relative
        select.input-text.lms-class-selector(name="moodle_classes" id="moodle_classes-input")
            option(value="") --- Choose Class To Update
        div.d-none#moodle_classes-update-form
            input.w-100.hiden.input-text#moodle_update_username-input(placeholder='Username', name='moodle_username')
            input#moodle_update_class_id-input(type='hidden')
            +button-save(id)
            +button-account-remove('moodle_class_account_remove')
